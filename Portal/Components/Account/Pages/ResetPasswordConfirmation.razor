@page "/Account/ResetPasswordConfirmation"
@layout Layout.AccountAuthLayout
@inject NavigationManager NavigationManager

<PageTitle>Password resettata</PageTitle>

<RadzenStack Gap="1rem" AlignItems="AlignItems.Center">
    <RadzenIcon Icon="check_circle" Style="font-size:3rem;color:#4caf50;" />
    <div class="auth-title" style="font-size:1.6rem;">Password aggiornata</div>
    <div class="auth-subtitle">Ora puoi effettuare il login con la nuova password.</div>
    <RadzenButton Text="Vai al login" ButtonStyle="ButtonStyle.Primary" Style="width:100%;" Click="GoLogin" Icon="login" />
</RadzenStack>

@code {
    void GoLogin() => NavigationManager.NavigateTo("Account/Login");
}
