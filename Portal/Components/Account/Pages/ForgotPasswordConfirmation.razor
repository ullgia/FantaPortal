@page "/Account/ForgotPasswordConfirmation"
@layout Layout.AccountAuthLayout
@inject NavigationManager NavigationManager

<PageTitle>Email inviata</PageTitle>

<RadzenStack Gap="1rem" AlignItems="AlignItems.Center">
    <RadzenIcon Icon="mark_email_read" Style="font-size:3rem;color:#4caf50;" />
    <div class="auth-title" style="font-size:1.6rem;">Controlla la tua email</div>
    <div class="auth-subtitle">Se l'indirizzo esiste riceverai un link per il reset password.</div>
    <RadzenButton Text="Torna al login" ButtonStyle="ButtonStyle.Primary" Style="width:100%;" Click="GoLogin" Icon="login" />
</RadzenStack>

@code {
    void GoLogin() => NavigationManager.NavigateTo("Account/Login");
}
